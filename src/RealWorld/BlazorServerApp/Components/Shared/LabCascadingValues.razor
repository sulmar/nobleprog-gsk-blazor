<CascadingValue Value="@customer">
    <CascadingValue Value="@measure">
        @ChildContent
    </CascadingValue>
</CascadingValue>



@code {
    private string title = "Pojemność";
    private int capacity = 45;
    private string unit = "L";

    private Measure measure => new Measure(title, capacity, unit);

    private Customer customer => new Customer { Id = 1, Name = "GSK" };

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}
